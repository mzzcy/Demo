<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
  <typeAliases>
    <typeAlias alias="role" type="com.mz.mybatis.po.Role"/>
  </typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC">
        <property name="autoCommit" value="false"/>
      </transactionManager>
      <dataSource type="POOLED">
        <property name="driver" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://"/>
        <property name="username" value="com.mysql.jdbc.Driver"/>
        <property name="password" value="com.mysql.jdbc.Driver"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="com/mz/mybatis/mapper/RoleMapper.xml"/>
  </mappers>

</configuration>